<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p id="notice"><%= notice %></p>

<h1>Listing Submit Requests</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>Message</th>
      <th>Request user</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <td><%= submit_request.user.name %></td>
        <td><%= submit_request.task.title %></td>
        <td><%= submit_request.message %></td>
        <td><%= submit_request.request_user_id %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to '詳細表示', submit_request, class: 'btn btn-default' %></td>
        <td><%= link_to '承認する', approve_submit_request_path(submit_request, submit_request: {status: 2}), method: :patch, data: { confirm: '承認しますか?' }, class: 'btn btn-success' %></td>
        <td><%= link_to '却下する', reject_submit_request_path(submit_request, submit_request: {status: 9}), method: :patch, data: { confirm: '却下しますか?' }, class:'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Submit request', new_submit_request_path %>
</div>
</div>
