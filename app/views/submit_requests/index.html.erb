<p id="notice"><%= notice %></p>

<h1>Listing Submit Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Task</th>
      <th>Message</th>
      <th>Request user</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @submit_requests.each do |submit_request| %>
      <tr>
        <td><%= submit_request.user %></td>
        <td><%= submit_request.task %></td>
        <td><%= submit_request.message %></td>
        <td><%= submit_request.request_user_id %></td>
        <td><%= submit_request.status %></td>
        <td><%= link_to 'Show', submit_request %></td>
        <td><%= link_to 'Edit', edit_submit_request_path(submit_request) %></td>
        <td><%= link_to 'Destroy', submit_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

