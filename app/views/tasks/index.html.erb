<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
<p id="notice"><%= notice %></p>
<h1>Listing Tasks</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      <th>Deadline</th>
      <th>Charge</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.name %></td>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.deadline.strftime("%Y年%m月%d日 %H時%M分") %></td>
        <td><%= task.charge.name %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task, class: 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_task_path(task), class: 'btn btn-default btn-sm btn-success' %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-sm btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Task', new_task_path %>
</div>
</div>
