<p id="notice"><%= notice %></p>
<div class="child row">
  <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <div class="blog-text">
      <p class="left"><strong>name</strong></p>
      <p class="left"><%= @user.name %></p>
      <p class="left"><strong>email</strong></p>
      <p class="left"><%= @user.email %></p>
    </div>

    <div id="follower_area">
    <p>follower</p>
      <%= render partial: 'users/show_follower', locals: { followers: @follower } %>
    </div>

    <div id="followed_area">
    <p>followed</p>
      <%= render partial: 'users/show_followed', locals: { followed_users: @followed } %>
    </div>

    <%= link_to '戻る', users_path %>
  </div>
</div>
